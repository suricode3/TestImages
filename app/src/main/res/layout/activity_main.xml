<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:fontFamily="Calibri"
        android:gravity="left"
        android:text="@string/eng_imagetype"
       
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/image_imagetypeSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
         />

    <TextView
        android:id="@+id/image_descriptionlabelTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:fontFamily="Calibri"
        android:gravity="left"
        android:text="@string/eng_type"
       
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/image_descriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        
        android:fontFamily="Calibri"
        android:gravity="left"
        android:padding="10dp"
       
        android:textSize="18sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/image_imagetypeCB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:drawableLeft="@android:color/transparent"
        android:drawablePadding="20dp"
        android:fontFamily="Calibri"
        android:padding="10sp"
        android:text="Pick from Gallery"
       
        android:textSize="15sp"
        android:textStyle="bold" />
    
    <Button android:id="@+id/btncrop"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="crop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/image_captureBT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_weight=".3"
            
            android:fontFamily="Calibri"
            android:gravity="center"
            android:text="@string/eng_imagecapture"
           
            android:textSize="18sp" />

        <Button
            android:id="@+id/image_changeBT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_weight=".3"
            
            android:fontFamily="Calibri"
            android:gravity="center"
            android:text="@string/eng_changeimage"
           
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/image_previousBT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_weight=".3"
            
            android:fontFamily="Calibri"
            android:gravity="center"
            android:text="Previous"
           
            android:textSize="18sp" />

        <Button
            android:id="@+id/image_nextBT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_weight=".3"
            
            android:fontFamily="Calibri"
            android:gravity="center"
            android:text="Next"
           
            android:textSize="18sp" />
    </LinearLayout>

     <ImageView
        android:id="@+id/image_displayIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
     
        android:fontFamily="Calibri"
        android:gravity="center"
        android:src="@mipmap/ic_launcher"
        />

</LinearLayout>